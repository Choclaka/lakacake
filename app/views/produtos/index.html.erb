<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th id="foto-h">Foto</th>
      <th id="desc-h">Descricao</thid>
      <th id="tipo-h">Tipo</th>
      <th id="nome-h">Nome</th>
      <th id="preco-h">Preco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td>/<%= image_tag produto.foto.url(:thumb) %></td>
        <td class="desc"><%= produto.descricao %></td>
        <td class="tipo"><%= produto.tipo %></td>
        <td class="nome"><%= produto.nome %></td>
        <td class="preco"><%= produto.preco %></td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

